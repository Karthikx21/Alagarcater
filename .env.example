# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/alagar_catering"

# Authentication & Security
# JWT secret key - CHANGE THIS IN PRODUCTION!
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"

# Session secret - CHANGE THIS IN PRODUCTION!
SESSION_SECRET="your-session-secret-key-change-this-in-production"

# Server Configuration
# Application environment (development, production, test)
NODE_ENV="development"

# Port number for the server
PORT=5000

# Security Configuration
# Rate limiting window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5000"

# Logging Configuration
# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL="info"

# Log file path (optional, defaults to logs/app.log)
LOG_FILE_PATH="logs/app.log"

# Email Configuration (Optional)
# SMTP server settings for notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Application Settings
# Company information
COMPANY_NAME="Alagar Catering Services"
COMPANY_EMAIL="info@algarcatering.com"
COMPANY_PHONE="+91-XXX-XXX-XXXX"

# Feature Flags
# Enable/disable certain features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# External Services (Optional)
# Payment gateway configuration
PAYMENT_GATEWAY_API_KEY=""
PAYMENT_GATEWAY_SECRET=""

# File Upload Configuration
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Cache Configuration
# Redis connection (optional)
REDIS_URL="redis://localhost:6379"

# Enable/disable caching
ENABLE_CACHING=false

# Performance Monitoring
# Application monitoring (optional)
MONITORING_API_KEY=""
MONITORING_ENDPOINT=""

# Backup Configuration
# Database backup settings
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration (Production)
# SSL certificate paths
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# Force HTTPS redirect
FORCE_HTTPS=false
